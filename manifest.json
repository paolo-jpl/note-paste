{
  "manifest_version": 2,
  "name": "NotePaste",
  "version": "1.0",
  "description": "Write quick notes over an image when copy-pasting",

  "icons": {
    "48": "icons/icon.svg"
  },

  "background": {
    "scripts": ["note.js"]
  },

  "permissions": ["notifications", "contextMenus", "clipboardWrite", "clipboardRead"],

  "browser_specific_settings": {
    "gecko": {
      "id": "note-paste@example.com"
    }
  }
}


