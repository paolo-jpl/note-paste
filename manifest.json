{
  "manifest_version": 2,
  "name": "NotePaste",
  "version": "1.0",
  "description": "Annotates text over images and adds to clipboard",

  "icons": {
    "48": "icons/icon.svg"
  },

  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },

  "permissions": ["notifications", "contextMenus", "clipboardWrite", "clipboardRead"],

  "browser_specific_settings": {
    "gecko": {
      "id": "note-paste@example.com"
    }
  }
}


